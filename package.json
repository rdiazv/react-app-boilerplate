{
  "name": "react-app-boilerplate",
  "version": "1.0.0",
  "description": "A react app boilerplate.",
  "main": "index.js",
  "repository": "git@github.com:rdiazv/react-app-boilerplate.git",
  "author": "Rodrigo Andrés Díaz Vergara <rdiazv89@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "NODE_ENV=production webpack --config webpack/webpack.config.js -p",
    "dev": "NODE_ENV=development webpack-dev-server --config webpack/webpack.config.js --hot",
    "test": "jest",
    "test-watch": "jest --watch"
  },
  "devDependencies": {
    "babel-core": "6.24.1",
    "babel-jest": "20.0.3",
    "babel-loader": "7.0.0",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-react": "6.24.1",
    "babel-preset-stage-0": "6.24.1",
    "directory-named-webpack-plugin": "2.1.0",
    "enzyme": "2.8.2",
    "enzyme-to-json": "1.5.1",
    "html-webpack-plugin": "2.28.0",
    "jest": "20.0.4",
    "jest-directory-named-resolver": "jsonnull/jest-directory-named-resolver",
    "react-test-renderer": "15.5.4",
    "webpack": "2.6.1",
    "webpack-config": "7.0.0",
    "webpack-dev-server": "2.4.5"
  },
  "dependencies": {
    "react": "15.5.4",
    "react-dom": "15.5.4"
  },
  "jest": {
    "testRegex": "-test.js$",
    "resolver": "jest-directory-named-resolver",
    "moduleDirectories": [
      "src",
      "tests",
      "node_modules"
    ],
    "collectCoverage": true,
    "coverageDirectory": "tests/coverage",
    "coverageReporters": [
      "html",
      "text-summary"
    ],
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  }
}
